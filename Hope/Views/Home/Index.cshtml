@{
    ViewBag.Title = "微心愿";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@section head{
    <link href="/App_Themes/Site/index.css" rel="stylesheet" type="text/css" />
}
@section scripts{
    <script src="/Scripts/jquery.carouFredSel-6.0.4-packed.js" type="text/javascript"></script>
    <script type="text/javascript">
        // --------- username password begin ---------
        function myfocus(e) {
            _e = $(e);
            _default = _e.attr('default');
            if (_e.val() == _default)
                _e.val('');
        }

        function myblur(e) {
            _e = $(e);
            _default = _e.attr('default');
            if (_e.val() == '')
                _e.val(_default);
        }

        function passwordfocus(e, real) {
            $(e).css({ display: 'none' });
            _real = $('#' + real);
            _real.css({ display: 'block' });
            _real.focus();
        }

        function passwordblur(e, fake) {
            _e = $(e);
            if (_e.val() == '') {
                _e.css({ display: 'none' });
                _fake = $('#' + fake);
                _fake.css({ display: 'block' });
            }
        }

        $(function () {
            $('#carousel').carouFredSel({
                width: '100%',
                items: {
                    visible: 3,
                    start: -1
                },
                scroll: {
                    items: 1,
                    duration: 1000,
                    timeoutDuration: 3000
                },
                prev: '#prev',
                next: '#next',
                pagination: {
                    container: '#pager',
                    deviation: 1
                }
            });
        });

        function Login() {
            var userName = $("#text_username").val();
            var pwd = $("#text_password").val();
            if (userName == $("text_username").attr("default") || pwd == $("text_password_fake").attr("default")) {
                alert("用户名或密码不能为空!");
                return;
            }
            $.U1Ajax("/Account/LoginJson", { UserID: userName, Password: pwd }, function (result) {
                if (result.Tag == 1) {
                    alert("登录成功!");
                    window.location.href = "/";
                }
                else {
                    alert(result.Message);
                }
            });
        }
    </script>
    <style>
        #carousel img
        {
            display: block;
            float: left;
        }
        #prev, #next
        {
            background-color: rgba(255, 255, 255, 0.7);
            display: block;
            height: 450px;
            width: 50%;
            top: 0;
            position: absolute;
        }
        #prev:hover, #next:hover
        {
            background-color: #fff;
            background-color: rgba(255, 255, 255, 0.8);
        }
        #prev
        {
            left: -495px;
        }
        #next
        {
            right: -495px;
        }
        #pager
        {
            margin-left: -470px;
            position: absolute;
            left: 50%;
            bottom: 10px;
        }
        #pager a
        {
            border: 2px solid #fff;
            border-radius: 10px;
            display: inline-block;
            width: 10px;
            height: 10px;
            margin: 0 5px 0 0;
        }
        #pager a:hover
        {
            background-color: rgba(255, 255, 255, 0.5);
        }
        #pager a span
        {
            display: none;
        }
        #pager a.selected
        {
            background-color: #fff;
        }
    </style>
}
